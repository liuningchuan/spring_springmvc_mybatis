<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="personService"  destroy-method="mydestory"   class="com.liuning.beanlife.PersonService">
		<!-- 这里注入我们属性，前提就是有setName才能ok -->
		<property name="name">
			<value>liuning</value>
		</property>
	</bean>
	
	<!-- 配置我们的自己后置处理器(有点类似我们的filter) -->
	<bean id="myBeanPostProcessor" class="com.liuning.beanlife.MyBeanPostProcessor" />
</beans>